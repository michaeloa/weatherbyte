<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/time_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="#ffffff"
                android:textSize="48sp"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:shadowColor="#000000"
                android:text="00:00"/>
            <TextView android:id="@+id/day_of_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="48sp"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:shadowColor="#000000"/>
            <TextView android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_below="@id/day_of_week"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:shadowColor="#000000"/>
        </RelativeLayout>
        <ImageView android:layout_width="1dp"
            android:layout_height="76dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/separator"/>
        <RelativeLayout android:id="@+id/weather_container"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <TextView android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:shadowColor="#000000"
                android:singleLine="true"
                android:text="Nowhere"/>
            <ImageView android:id="@+id/weather_icon"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/location"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_unknown"/>
            <TextView android:id="@+id/temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/weather_icon"
                android:layout_below="@id/location"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:shadowColor="#000000"
                android:singleLine="true"
                android:text="N/A"
                android:textIsSelectable="false" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>